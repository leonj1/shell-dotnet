{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/shell-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31,
          "fileSizeLimitBytes": 104857600,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName", "WithProcessId", "WithThreadId"],
    "Properties": {
      "ApplicationName": "DotNetShell"
    }
  },
  "AllowedHosts": "*",
  "Shell": {
    "Version": "1.0.0",
    "Name": "DotNetShell",
    "Environment": "Development",
    "Modules": {
      "Source": "./modules",
      "AutoLoad": true,
      "ReloadOnChange": true,
      "ValidateOnLoad": true
    },
    "Services": {
      "Authentication": {
        "Enabled": true,
        "DefaultProvider": "JWT",
        "JWT": {
          "Issuer": "DotNetShell",
          "Audience": "DotNetShell.API",
          "SecretKey": "DevelopmentSecretKey123456789012345678901234567890",
          "ExpireMinutes": 60,
          "RefreshTokenExpireDays": 7,
          "RequireHttpsMetadata": false,
          "ValidateIssuerSigningKey": true,
          "ValidateIssuer": true,
          "ValidateAudience": true,
          "ClockSkew": "00:05:00"
        }
      },
      "Authorization": {
        "Enabled": true,
        "DefaultPolicy": "RequireAuthentication",
        "CachePolicies": true,
        "CacheExpireMinutes": 30
      },
      "Logging": {
        "MinLevel": "Information",
        "IncludeScopes": true,
        "Console": {
          "Enabled": true,
          "IncludeTimestamp": true,
          "TimestampFormat": "yyyy-MM-dd HH:mm:ss"
        },
        "File": {
          "Enabled": true,
          "Path": "./logs/shell-.log",
          "RollingInterval": "Day",
          "RetainedFileCountLimit": 31,
          "FileSizeLimitBytes": 104857600
        }
      },
      "Telemetry": {
        "Enabled": true,
        "ServiceName": "DotNetShell",
        "ServiceVersion": "1.0.0",
        "Console": {
          "Enabled": true
        },
        "Tracing": {
          "Enabled": true,
          "SampleRatio": 1.0
        },
        "Metrics": {
          "Enabled": true,
          "ExportIntervalMilliseconds": 30000
        }
      },
      "HealthChecks": {
        "Enabled": true,
        "Endpoints": {
          "Liveness": "/health/live",
          "Readiness": "/health/ready",
          "Startup": "/health/startup"
        },
        "CheckInterval": "00:00:30",
        "Timeout": "00:00:10"
      }
    },
    "Kestrel": {
      "Endpoints": {
        "Http": {
          "Url": "http://localhost:5000"
        },
        "Https": {
          "Url": "https://localhost:5001"
        }
      },
      "Limits": {
        "MaxConcurrentConnections": 100,
        "MaxConcurrentUpgradedConnections": 100,
        "MaxRequestBodySize": 30000000,
        "RequestHeadersTimeout": "00:00:30",
        "ResponseDrainTimeout": "00:00:05"
      }
    },
    "Swagger": {
      "Enabled": true,
      "Title": "DotNet Shell API",
      "Version": "v1",
      "Description": "Enterprise-grade modular hosting framework for .NET applications",
      "Contact": {
        "Name": "Development Team",
        "Email": "dev@company.com",
        "Url": "https://github.com/company/shell-dotnet-core"
      }
    }
  }
}