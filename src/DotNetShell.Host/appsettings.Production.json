{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "System": "Error",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Shell": {
    "Environment": "Production",
    "Services": {
      "Authentication": {
        "JWT": {
          "RequireHttpsMetadata": true,
          "Secret": "@KeyVault:JWT-Secret"
        }
      },
      "Logging": {
        "MinLevel": "Warning",
        "Console": {
          "Enabled": false
        },
        "File": {
          "Enabled": true,
          "Path": "/var/log/shell/shell-.log",
          "RollingInterval": "Hour",
          "RetainedFileCountLimit": 72,
          "FileSizeLimitBytes": 52428800
        },
        "Elasticsearch": {
          "Enabled": true,
          "Url": "@KeyVault:Elasticsearch-Url",
          "IndexFormat": "dotnet-shell-{0:yyyy.MM.dd}",
          "AutoRegisterTemplate": true
        }
      },
      "Telemetry": {
        "Console": {
          "Enabled": false
        },
        "Tracing": {
          "SampleRatio": 0.1
        },
        "Jaeger": {
          "Enabled": true,
          "Endpoint": "@KeyVault:Jaeger-Endpoint"
        },
        "ApplicationInsights": {
          "Enabled": true,
          "InstrumentationKey": "@KeyVault:AppInsights-Key"
        }
      }
    },
    "Kestrel": {
      "Endpoints": {
        "Http": {
          "Url": "http://*:80"
        },
        "Https": {
          "Url": "https://*:443",
          "Certificate": {
            "Path": "/app/certs/https.pfx",
            "KeyPath": "/app/certs/https.key"
          }
        }
      },
      "Limits": {
        "MaxConcurrentConnections": 1000,
        "MaxConcurrentUpgradedConnections": 100,
        "MaxRequestBodySize": 30000000,
        "RequestHeadersTimeout": "00:00:30",
        "ResponseDrainTimeout": "00:00:05"
      }
    },
    "Swagger": {
      "Enabled": false
    }
  }
}